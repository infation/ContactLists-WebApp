    body
        nav.navbar.navbar-inverse
            div.container-fluid
                ul.nav.navbar-nav
                    li
                        a(href = "home" ) Home
                    li 
                        a(href="mailer") Mailer
                    li.active 
                        a(href="contacts") Contacts
                ul.nav.navbar-nav.navbar-right
                    li 
