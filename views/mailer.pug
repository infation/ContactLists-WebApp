doctype html
html(lang="en")
    head
        title Submission form
        script(src="http://code.jquery.com/jquery-3.2.1.js")
        script(src='/javascripts/mailer.js')
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
        link(rel='stylesheet' type = 'text/css' href='/stylesheets/style.css')

    body
        nav.navbar.navbar-inverse
            div.container-fluid
                ul.nav.navbar-nav
                    li
                        a(href = "home" ) Home
                    li.active
                        a(href="mailer") Mailer
                    li
                        a(href="contacts") Contacts
                ul.nav.navbar-nav.navbar-right
                    li 
                        if user
                            a(href="logout") 
                                button.btn.btn-danger.navbar-btn.btn-lg(id = "loginbtn") Logout
                        else
                            a(href = "login")
                                button.btn.btn-success.navbar-btn.btn-lg(id = "loginbtn") Login
    
        .container
            .row
                .col-lg-10.col-lg-offset-1
                    h1.text-center MAILER FORM

                    form(action="submission", method="post")

                        //- Prefixes 
                        .row
                            .col-md-4
                                .form-group.text-center
                                    each val in ['Mr.', 'Mrs.', 'Ms.', 'Dr.']
                                        label.radio-inline #{val}
                                            input.form-control(type = "radio"  name = "prefix" id="prefix" value = val checked)
                            .col-md-4
                                .form-group 
                                    label First Name*   
                                    input.form-control(type="text" name="first" required autofocus)
                            .col-md-4
                                .form-group
                                    label Last Name*
                                    input.form-control(type="text" name="last" id="last" required)
                        
                        .row
                            .col-md-3
                                .form-group
                                    label Street:
                                    input.form-control(type="text" name="street")
                            .col-md-3
                                .form-group   
                                    label City:
                                    input.form-control(type="text" name="city")
                            .col-md-3
                                .form-group        
                                    label State:
                                    p: select.form-control(name = "state")
                            .col-md-3
                                .form-group        
                                    label Zip:
                                    input.form-control(type="text" name="zip")
                  
                        .row   
                            .col-md-6
                                .form-group
                                    label(for="phone") Phone 
                                    input.form-control(type="number" name="phone" id="phone")
                            .col-md-6
                                .form-group
                                    label(for="email") Email
                                    input.form-control(type="email" name="email" id="email")
                

                    
                        
                        .row
                            .col-md-12.text-center
                                label.text-center How may we contact you?
                                    .form-group
                                        input.form-control(type="checkbox" name="contactphone" checked)
                                        label Phone
                                    .form-group
                                        input.form-control(type="checkbox" name="contactmail" checked)
                                        label Mail
                                    .form-group         
                                        input.form-control(type="checkbox" name="contactemail" checked)
                                        label Email
                        
                        .row  
                            .text-center
                                button.center.btn.btn-success.btn-lg(type = "submit") Submit